{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/assets": ["src/assets", "src/assets/*"],
      "@/components": ["src/components", "src/components/*"],
      "@/constants": ["src/constants", "src/constants/*"],
      "@/contexts": ["src/contexts", "src/contexts/*"],
      "@/data": ["src/data", "src/data/*"],
      "@/hooks": ["src/hooks", "src/hooks/*"],
      "@/navigation": ["src/navigation", "src/navigation/*"],
      "@/services": ["src/services", "src/services/*"],
      "@/screens": ["src/screens", "src/screens/*"],
      "@/types": ["src/types", "src/types/*"],
      "@/ui-kit": ["src/ui-kit", "src/ui-kit/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
